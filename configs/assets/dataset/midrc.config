import numpy as np

from dpipe.dataset.wrappers import apply
from ood.dataset.midrc import MIDRC
from ood.dataset.utils import Rescale3D, scale_ct, CropToLungs


# if `voxel_spacing[i]` is `None` when `i`-th dimension will be used without scaling
voxel_spacing = (1., 1., 1.5)

preprocessed_dataset = apply(CropToLungs(Rescale3D(MIDRC(), voxel_spacing, order=1)), load_image=scale_ct)
dataset = apply(preprocessed_dataset, load_image=np.float32)