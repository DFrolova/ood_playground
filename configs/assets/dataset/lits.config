import numpy as np

from dpipe.dataset.wrappers import apply, cache_methods
from ood.dataset.lits import LiTS
from ood.dataset.utils import Rescale3D, scale_ct


# if `voxel_spacing[i]` is `None` when `i`-th dimension will be used without scaling
voxel_spacing = (1, 0.95, 0.95)

preprocessed_dataset = apply(Rescale3D(LiTS(), voxel_spacing), load_image=scale_ct)
dataset = apply(cache_methods(apply(preprocessed_dataset, load_image=np.float16)), load_image=np.float32)